<!DOCTYPE html>

<html>
<head></head>
<body>

<h1>Books</h1>

<table>
  <thead>
    <th>Title</th>
    <th>Body</th>
    <th colspan="3"></th>
  </thead>
  <tbody>
<% @books.each do |book| %>

    <tr>
    <td><span><%= book.title %></span></td>
    <td><span><%= book.body %></span></td>
    <td><span><%= link_to "Show", "/books/#{book.id}" %></span></td>
    <td><span><%= link_to "Edit", "/books/#{book.id}/edit" %></span></td>
    <td><span><%= link_to "Destroy", "/books/#{book.id}", method: :delete, "data-confirm" => "Are you Sure?" %></span></td>
    </tr>

<% end %>

</tbody>
</table>



<h2>New book</h2>
<% if @book.errors.any? %>
  <div id="errorExplanation">
  <h2><%= @book.errors.count %>errors prohibited this book from being saved:</h2>
  
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  </div>
<% end %>


<%= form_with model: @book, url: books_path  do |f| %>
<div class="field">
<%= f.label :title %>
<div class="field-box">
<%= f.text_field :title %></div>
</div>

<div class="field"><%= f.label :body %>
<div class="field-box">
<%= f.text_area :body %></div>
</div>

<style>
.field {
    font-size: 13px;
    margin-bottom: 10px;
  }
  
.field-box {
  padding: 1px 2px;
  border: 2px;
}
  
</style>

<%= f.submit 'create book' %>
<% end %>
</body>
</html>