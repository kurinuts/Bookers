<h1>Books</h1>

<% @books.each do |book| %>

<h4>Title</h4>
<span><%= book.title %></span>

<h4>Body</h4>
<span><%= book.body %></span>

<span><%= link_to "show", "/books/#{book.id}" %></span>
<% end %>



<h2>New book</h2>
<%= form_with model: @book, url: '/books', method: :post do |f| %>
<h5>title</h5>
<%= f.text_field :title %>

<h5>body</h5>
<%= f.text_area :body %>

<%= f.submit 'create book' %>

<% end %>