<html>
  <head></head>
  <body>
    <h1><strong>Editing Book</strong></h1>
    
  <% if @book.errors.any? %>
  <div id="errorExplanation">
  <h2><%= @book.errors.count %>errors prohibited this book from being saved:</h2>
  
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  </div>
 <% end %>
    
    <%= form_with model: @book do |f| %>
    
    <div class="field">
      <label for="book_title">Title</label><br>
      <%= f.text_field :title %>
    </div>
    
    <div class="field">
      <label for="book_body">Body</label><br>
      <%= f.text_area :body %>
    </div>
    
    <div class="update"><%= f.submit 'Update Book' %>
    </div>
    <% end %>
    
    <a class="show"><%= link_to "Show", books_path %></a>
    |
    <a class="Back"><%= link_to "Back", book_path %></a>
    
    <style>
  
    body {
      margin: 33px;
    }
    
    h1 {
      display: block;
      margin-top: 18px;
      margin-bottom: 18px;
      margin-left: 0;
      font-size: 20px;
      font-weight: bold;
    }
    
    .field {
      margin-bottom: 10px;
    }
    
    .actions {
      margin-bottom: 10px;
    }
    
    .update {
      display: inline-block;
      padding: 1px 6px;
      margin-bottom: 10px;
    }
    </style>
    
    
  </body>
</html>